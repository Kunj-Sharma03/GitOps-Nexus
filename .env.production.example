# ===========================================
# GitOps Nexus - Production Environment
# ===========================================
# Copy this file to .env and fill in all values
# DO NOT commit .env to git!
# ===========================================

# ===========================================
# Database (PostgreSQL)
# ===========================================
POSTGRES_USER=gitops
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_DB=gitops

# ===========================================
# Security
# ===========================================
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_BASE64_32

# ===========================================
# GitHub OAuth
# ===========================================
# Create at: https://github.com/settings/developers
# Set callback URL to: https://YOUR_DOMAIN/api/auth/github/callback
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# ===========================================
# URLs
# ===========================================
# Your Vercel frontend URL (no trailing slash)
FRONTEND_URL=https://your-app.vercel.app

# ===========================================
# SMTP (Optional - for email notifications)
# ===========================================
# Using Brevo (Sendinblue), Mailgun, or similar
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM=noreply@yourdomain.com

# ===========================================
# Domain (for Nginx SSL)
# ===========================================
DOMAIN=api.yourdomain.com
